<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magento_Theme::css/footer.css"/>
        <css src="Magento_Theme::css/header.css"/>
    </head>
    <body>

        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_alt" xsi:type="string">Custom Logo</argument>
                <argument name="logo_img_width" xsi:type="number">80</argument>
                <argument name="logo_img_height" xsi:type="number">30</argument>
            </arguments>
        </referenceBlock>

        
        <!-- <referenceBlock name="sidebar.main" remove="true" /> -->
        <!-- <referenceBlock name="product.info.review" remove="true" />
        <referenceBlock name="reviews.tab" remove="true" /> -->


        <!-- <referenceBlock name="wish-list-link" remove="true"/> -->
        <!-- <referenceBlock name="top.links" remove="true"/> -->
        <referenceBlock name="advanced-search-link" remove="true"/>
        <referenceBlock name="header.panel" remove="false"/>
        <referenceBlock name="form.subscribe" remove="true" />

        <!-- 
        <move element="catalog.topnav" destination="header.container"/> -->
        <!-- <move element="top.links" destination="footer_links" /> -->
       


        <referenceBlock name="footer_links" remove="true" />
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.navigation.menu" before="-" template="Magento_Theme::footer_menu.phtml"/>
        </referenceContainer>

        <!-- 
        <move element="top.search" destination="header.container" before="-" />
        <move element="minicart" destination="header.container" before="-" /> -->
        <!-- <move element="catalog.topnav" as="nav" destination="header.container"/> -->
    </body>
</page>



